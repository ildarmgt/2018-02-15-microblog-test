<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
    <link rel="stylesheet" href="/css/main.css">
  </head>
  <body>

    <div class="layout-navbar">

      <% if !! @session_user %>

        <div class="layout-signed_in_opt">

          <form action='/user/settings' method='get' class="layout-signed_in_options">
            <input type="submit" value="Settings">
          </form>

          <form action='/logging_out' method='post' class="layout-signed_in_options">
            <input type="submit" value="Logout">
          </form>

        </div>

        <nav>
          <div class="layout-change_pages" id="layout-home_button">
            <a href='/'><%= @session_user.username %></a>
          </div>
          <div class="layout-change_pages" id="layout-blogs_button">
            <a href='/blogs'>Blogs</a>
          </div>
          <div class="layout-change_pages" id="layout-people_button">
            <a href='/people'>People</a>
          </div>
        </nav>

      <% else %>

        <nav>
          <div class="layout-change_pages" id="layout-home_button">
            <a href='/'>Home</a>
          </div>
          <div class="layout-change_pages" id="layout-blogs_button">
            <a href='/blogs'>Blogs</a>
          </div>
          <div class="layout-change_pages" id="layout-people_button">
            <a href='/people'>People</a>
          </div>
        </nav>

        <form action="/user_logging_in" method="post" class="layout-login_info">
          <input type="text" name="username" placeholder="Username">
          <input type="password" name="password" placeholder="Password">
          <input type="submit" value="Log In" id="layout-login_button">
        </form>

      <% end %>

      <div class="layout-notice">
        <div id="layout-logged_out"><%= @notice %></div>
        <div id="layout-wrong"><%= @notice_wrong %></div>
      </div>

    </div>

    <div class="layout-spacer"></div>

    <div class="main">
      <%= yield %>
    </div>

