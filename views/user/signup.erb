<div class="page">
<div class="h1_signup">
<h1>Sign Up</h1>
</div>

<form action='/creating_user' method='post' class="form_create_user">
  <input type="text" id="username_signup" name="username" placeholder="username" class="form_create_user__name">
  <br>
  <input type="password" id="pass1_signup" name="pass1" placeholder="create password" class="form_create_user__pass1">
  <br>
  <input type="password" id="pass2_signup" name="pass2" placeholder="verify password" class="form_create_user__pass2">
  <br>
  <div class="form_create_user__submit" style="border: 1px black solid; display: inline-block;">
    Create user
  </div>
  <br><br>
  <!--  <input type="submit" value="Create user"> -->
  <div class="form_create_user__error">
    <%= @error_msg %>
  </div>

</form>
</div>

<script src="../javascript/user/signup2.js"></script>